<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_firebase"
    tools:context=".ui.CadastreGameFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_icon_cadastre_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back" />


    <LinearLayout
        android:id="@+id/llCadastreGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <include
            android:id="@+id/incRegisterGame"
            layout="@layout/register_game_body" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivUploadGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_login_body"
        android:backgroundTint="@color/purple_700"
        android:layout_alignTop="@id/llCadastreGame"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:clickable="true"
        android:src="@drawable/ic_photo_camera"
        android:focusable="true" />

</RelativeLayout>